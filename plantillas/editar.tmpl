{{define "editar"}}
{{template "cabecera"}}

<div class="card">

  <div class="card-header"> Empleados </div>
  <div class="card-body">
    <form method="post" action="/actualizar">


      <label class="sr-only" for="inputName">Clave</label>
      <input type="hidden" value={{.Id}} class="form-control" name="id" id="id" placeholder="">


      <div class="form-group">
        <label for="">Nombre:</label>
        <input type="text" class="form-control" name="nombre" value="{{.Nombre}}" id="nombre" aria-describedby="helpId"
          placeholder="">
        <small id="helpId" class="form-text text-muted">Escribe tu nombre</small>
      </div>
      <div class="form-group">
        <label for="">Correo:</label>
        <input type="email" class="form-control" name="correo" value="{{.Correo}}" id="correo"
          aria-describedby="emailHelpId" placeholder="">
        <small id="emailHelpId" class="form-text text-muted">Correo:</small>
      </div>
      <button type="submit" class="btn btn-success">Modificar</button>
      <a name="" id="" class="btn btn-primary" href="/" role="button">Cancelar</a>
    </form>
  </div>

</div>

{{template "pie"}}
{{end}}